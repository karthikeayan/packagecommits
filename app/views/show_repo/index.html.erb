<div class="container">
	<center><h1>AIC Latest Packages Viewer</h1></center>
	<br>
	<div class="row">
		<div class="col-md-6">
			<fieldset id="version">
				<label style="padding-right: 10px;">AIC Version</label>
				<label class="radio-inline">
	    			<input type="radio" name="inlineVersionOptions" id="inlineRadio1" value="2.5"> 2.5
				</label>
				<label class="radio-inline">
	    			<input type="radio" name="inlineVersionOptions" id="inlineRadio2" value="3.0"> 3.0
				</label>
			</fieldset>
		</div>
		<div class="col-md-6">
			<fieldset id="service">
				<label style="padding-right: 10px;">Serivice</label>
				<label class="radio-inline">
	    			<input type="radio" name="inlineServiceOptions" id="inlineRadio3" value="aic-mos"> aic-mos
				</label>
				<label class="radio-inline">
	    			<input type="radio" name="inlineServiceOptions" id="inlineRadio4" value="aic-else-1"> aic-else-1
				</label>
				<label class="radio-inline">
	    			<input type="radio" name="inlineServiceOptions" id="inlineRadio5" value="aic-else-2"> aic-else-2
				</label>
				<label class="radio-inline">
	    			<input type="radio" name="inlineServiceOptions" id="inlineRadio6" value="aic-else-3"> aic-else-3
				</label>
				<label class="radio-inline">
	    			<input type="radio" name="inlineServiceOptions" id="inlineRadio7" value="aic-else-4"> aic-else-4
				</label>
			</fieldset>
		</div>
	</div>
	<br>
	<div class="row">
		<center><button type="button" class="btn btn-primary">Submit</button></center>
	</div>
	<br>
	<div class="row">
		<div class="col-md-6"><h4><center>System Test Repo</center></h4></div>
		<div class="col-md-6"><h4><center>Production Repo</center></h4></div>
		<!-- rgb(153,255,204); 
		style="background-color:lavender; -->
	</div>
	<div class="row">
		<div class="col-md-6 well"> <br>
		<% @test_repo.each_key do |component| %>
			<b><center><%= component.capitalize %></center></b>
			<table class="table table-hover">
				<% @test_repo[component].each do |key, value| %>
					<tbody>
						<tr class="<%= cycle('success', 'danger', 'info', 'active', 'warning') -%>">
							<td><%= key %></td>
							<td><%= value.split('_')[1..-1].join.split(/.deb/)[0] %></td>
						</tr>
					</tbody>
				<% end %>
			</table>
		<% end %>
		</div>
		<div class="col-md-6 well"> <br>
		<% @production_repo.each_key do |component| %>
			<b><center><%= component.capitalize %></center></b>
			<table class="table">
				<% @production_repo[component].each do |key, value| %>
					<tbody>
						<tr class="<%= cycle('info', 'danger', 'success', 'active', 'warning') -%>">
							<td><%= key %></td>
							<td><%= value.split('_')[1..-1].join.split(/.deb/)[0] %></td>
						</tr>
					</tbody>
				<% end %>
			</table>
		<% end %>
		</div>
	</div>
</div>